<%- include("../partials/html-head") %> 
<%- include("../partials/nav") %> 
<link rel="stylesheet" href="/stylesheets/cards.css">
<link rel="stylesheet" href="/stylesheets/buyers.css">

<h1 class="page-title"><b>All The Cravings!</b></h1>
<section class="cards">
    <% dishes.forEach(dish => { %>
        <div class="buyer-card">
            <a href="/dishes/<%=dish._id%>" class="dish-link">
                <div class="card-header"><%=dish.name%></div>
            </a>    
            <div class="card-content">
                <% if (dish.description){ %>
                    <p>
                        <b>Description:</b><br>
                        <%=dish.description %>
                    </p>
                <% } %>

                <% if (!dish.owner.equals(user?.profile._id)) { %>
                    <form action="/dishes/<%=dish._id%>/interest" method="POST" >
                        <% if (dish.isBuy){ %>
                            <button type="submit" class="card-button">I Can Cook This!</button>
                        <% } else { %>
                            <button type="submit" class="card-button">Let Me Eat This!</button>
                        <% } %>
                    </form>
                <% } %>

            </div>
        </div>
    <% }) %> 
</section>

<%- include("../partials/footer") %> 